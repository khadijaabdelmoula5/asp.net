@model ExamanApp.Models.Projet

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Projet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomProjet" class="control-label"> Name</label>
                <input asp-for="NomProjet" class="form-control" required />
                <span asp-validation-for="NomProjet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="addresseProjet" class="control-label">Address</label>
                <input asp-for="addresseProjet" class="form-control" required />
                <span asp-validation-for="addresseProjet" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatutProjet" class="control-label">Status</label>
                <input asp-for="StatutProjet" class="form-control" required />
                <span asp-validation-for="StatutProjet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label">Client</label>
                <select asp-for="ClientId" class="form-control" asp-items="@(new SelectList(ViewBag.ListClient,"ClientId","NomClient"))" >
                    <option value="">--Client--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
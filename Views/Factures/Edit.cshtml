@model ExamanApp.Models.Facture

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Invoices</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FactureId" />
            <div class="form-group">
                <label asp-for="Montant" class="control-label">Price</label>
                <input asp-for="Montant" type="number" class="form-control" />
                <span asp-validation-for="Montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjetId" class="control-label">Project</label>
                <select asp-for="ProjetId" class="form-control" asp-items="@(new SelectList(ViewBag.ListProjet,"ProjetId","NomProjet"))"></select>
                <span asp-validation-for="ProjetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
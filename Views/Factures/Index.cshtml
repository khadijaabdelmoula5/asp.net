@model IEnumerable<ExamanApp.Models.Facture>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.19.0/font/bootstrap-icons.css" rel="stylesheet">
</head>

<h1>list of Invoices</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th>
                Price
            </th>
            <th>
                Project
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Montant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Projet.NomProjet)
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.FactureId">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.FactureId">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.FactureId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@model ExamanApp.Models.Facture

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Montant" class="control-label"></label>
                <input asp-for="Montant" type="number" class="form-control" required />
                <span asp-validation-for="Montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjetId" class="control-label"></label>
                <select asp-for="ProjetId" class="form-control" asp-items="@(new SelectList(ViewBag.ListProjet,"ProjetId","NomProjet"))" required>
                    <option value="">--Projet--</option>
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
        <span class="bg-danger text-white">@ViewBag.error </span>

    </div>
</div>